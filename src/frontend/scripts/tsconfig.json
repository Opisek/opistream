{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "lib": [
        "ES2022"
      ],
      "module": "ES2022",
      "moduleResolution": "node",
      "target": "ES2022",
      "baseUrl": "../",
      "outDir": "../build",
      "removeComments": true,
      "typeRoots": [ "../node_modules/@types" ],
      "skipLibCheck": true,
      "noImplicitAny": true
    },
    "include": [
      "**/*.ts"
    ],
}