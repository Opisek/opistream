{
    "compilerOptions": {
        "module": "es6",
        "target": "es5",
        "allowJs": true,
        "noImplicitAny": true,
        "outDir": "./dist/js",
        "removeComments": true,
        "strict": true,
        "baseUrl": "./",
        "paths": {
            "socket.io-client": [ "node_modules/socket.io-client" ]
        },
        "moduleResolution": "node",
        "lib": ["es5", "es6", "dom"],
        "esModuleInterop": true,
    },
    "include": [
        "js/**/*.ts"
    ]
}